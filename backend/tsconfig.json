{
    "compilerOptions": {
      /* Diretórios de saída e entrada */
      "outDir": "dist",
      "rootDir": "src",
      
      /* Configurações do compilador */
      "target": "es2020",
      "module": "commonjs",
      "lib": ["es2020"],
      "strict": true,
  
      /* Suporte a import/export com caminhos relativos ou absolutos */
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
  }
  